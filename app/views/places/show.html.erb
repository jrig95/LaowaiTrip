

<div class="place-name">
  <h2><%= @place.place_name %>, <%= @place.place_name %></h2>
    <div class="place-info">
      <p><%= @place.description %></p>
      <div class="place-photos">
    <% @place.photos.each do |photo|  %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: "object-cover h-80 w-full card-image" %>
        <% end %>
        <div class="hotel-info">

          <p>Amenities:<%= @place.amenities %></p>
          <p>Price by night: $<%= @place.price_by_night %></p>
          <p>Number of rooms: <%= @place.number_rooms %></p>
          <p>Max number of guests: <%= @place.max_guest %></p>
          <p>Number of bathrooms: <%= @place.number_bathrooms %></p>
          <p>Address: <%= @place.address %></p>
            <div>
              <p><%= @place.view %></p>
                <div>
  <%= link_to "Link to #{@place.thirdparty} for booking", @place.link, method: :post %>

  <%= link_to image_tag("#{@place.thirdparty}.jpg",  height: '48', width: '48'), "#{@place.link}", alt: "Le Wagon", class:"img-fluid rounded-start"%>

</div>

    <div class="row justify-content-center", id="map"
      data-marker="<%= @marker.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<%= link_to 'Favorite', place_wishlists_path(@place), method: :post %>
</div>
</div>
</div>
</div>
