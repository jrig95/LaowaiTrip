
<h2><%= @place.place_name %>, <%= @place.place_name %></h2>
<%= cl_image_tag @place.photo.key, height: 300, width: 400, crop: :fill, class: "object-cover h-80 w-full card-image" %>
<p>description:<%= @place.description %></p>
<p>amenities:<%= @place.amenities %></p>
<p>price by night: $<%= @place.price_by_night %></p>
<p>number of rooms: <%= @place.number_rooms %>,</p>
<p>max guests: <%= @place.max_guest %>,</p>
<p>number of bathrooms: <%= @place.number_bathrooms %>,</p>
<p><%= @place.view %></p>
<%= link_to 'Favorite', place_wishlists_path(@place), method: :post %>
