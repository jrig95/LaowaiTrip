
<div class="w-full lg:flex-col">
<% @places.each do |place| %>
  <div class="lg:h-48 border-r mb-2 border-b border-l border-grey-light lg:border-l-0 lg:border-t lg:border-grey-light bg-white rounded-b lg:rounded-b-none lg:rounded-r flex flex-row leading-normal">
  <div class="h-48 lg:h-48 lg:w-48 bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('assets/hotel_entrance.jpg')" title="Woman holding a mug">
  </div>
  <div class="flex justify-between w-100">
    <div class="p-4">
      <p class="text-sm text-grey-dark flex items-center">
        <svg class="text-grey w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <path d="M4 8V6a6 6 0 1 1 12 0v2h1a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-8c0-1.1.9-2 2-2h1zm5 6.73V17h2v-2.27a2 2 0 1 0-2 0zM7 6v2h6V6a3 3 0 0 0-6 0z" />
        </svg>
        <%= place.city_name %>
      </p>
      <div class="text-black font-bold text-xl mb-2"><%= place.place_name %></div>
      <p class="text-grey-darker text-base"><%= place.description %></p>
    </div>
    <div class="flex items-center pr-3">
      <%= link_to "View car", place_path(place),  class: "view_car" %>
    </div>
    </div>
    </div>
  <% end %>
  </div>
</div>
